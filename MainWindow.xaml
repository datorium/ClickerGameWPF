<Window x:Class="ClickerGameWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClickerGameWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="#FF1D1A1A">
        <Button Content="Click Here" HorizontalAlignment="Center" VerticalAlignment="Top" Height="150" Width="300" FontSize="40" Margin="0,217,0,0" Foreground="White" Click="Button_Click" ClickMode="Press" >
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="LightCoral" Offset="0"/>
                    <GradientStop Color="Red" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
            
        </Button>

        <Label x:Name="ScoreLabel" Content="0" HorizontalContentAlignment="Center" HorizontalAlignment="Center" Margin="0,61,0,0" VerticalAlignment="Top" Height="100" Width="272" Foreground="White" FontSize="60"/>

    </Grid>
</Window>
